<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quadcoder.coinpet" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/coinpet_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.FullscreenTheme" >
        </activity>
        <activity
            android:name=".page.splash.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash"
            android:theme="@style/AppTheme.FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".page.mypet.MyPetActivity"
            android:label="@string/title_activity_my_pet"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".page.tutorial.TutorialActivity"
            android:label="@string/title_activity_tutorial"
            android:theme="@style/AppTheme.FullscreenTheme" >
        </activity>
        <activity
            android:name=".page.signup.SignupActivity"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme.FullscreenTheme" >
        </activity>
        <activity
            android:name=".page.common.GoalSettingActivity"
            android:label="@string/title_activity_transparent"
            android:theme="@style/AppTheme.DialogTheme" >
        </activity>
        <activity
            android:name=".page.setting.SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/AppTheme.DialogTheme" >
        </activity>
        <activity
            android:name=".page.quest.QuestActivity"
            android:label="@string/title_activity_quest"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".page.freinds.FriendsActivity"
            android:label="@string/title_activity_friends"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".page.quiz.QuizActivity"
            android:label="@string/title_activity_quiz"
            android:parentActivityName=".MainActivity" >
        </activity>

        <service
            android:name=".bluetooth.BluetoothService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
