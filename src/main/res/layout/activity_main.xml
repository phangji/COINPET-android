<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView android:text="Bluetooth Test" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/text" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Lv 4"
            android:id="@+id/tvLevel"
            android:layout_gravity="center_horizontal" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pbarExp"
                android:layout_gravity="center_horizontal|top"
                android:max="1000"
                android:progress="500"
                android:indeterminate="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="500/1000"
                android:id="@+id/tvExpText"
                android:layout_gravity="center" />

        </FrameLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register PN"
        android:id="@+id/button"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NetworkTest"
        android:id="@+id/btnNet"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 저금액"
        android:id="@+id/tvNowMoney"
        android:layout_gravity="left|top" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림"
            android:id="@+id/btnNoti"
            android:layout_gravity="right|top" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:id="@+id/btnSetting" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 코인펫"
            android:id="@+id/btnMyPet" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="용돈 기록장"
            android:id="@+id/btnCashbook" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="퀘스트"
            android:id="@+id/btnQuest" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="획득 업적"
            android:id="@+id/btnReward" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPet"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher" />


</FrameLayout>
