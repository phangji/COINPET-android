<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#535353"
    tools:context="com.quadcoder.coinpet.page.setting.SettingActivity" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_box"
        android:layout_gravity="center" >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="95dp">

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tbtnNoti"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/toggle_selector"
                android:textOff=""
                android:textOn=""
                android:minHeight="@null"
                android:minWidth="@null"
                android:theme="@null" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tbtnSound"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="23dp"
                android:background="@drawable/toggle_selector"
                android:textOff=""
                android:textOn=""
                android:minHeight="@null"
                android:minWidth="@null"
                android:checked="true" />
        </LinearLayout>
    </FrameLayout>


</FrameLayout>
