<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quadcoder.coinpet.page.quiz.QuizFragment"
    android:background="#fff">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_gravity="center|left"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="난이도"
                android:id="@+id/textView7"
                android:layout_marginBottom="6dp"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diff_easy"
                android:id="@+id/tvDiff"
                android:layout_gravity="center_horizontal"
                android:textSize="18dp"
                android:textColor="@color/skyblue" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgvQCoin"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/q_coin_3" />

        <LinearLayout
            android:layout_gravity="center_vertical|right"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남은 시간"
                android:id="@+id/textView8"
                android:layout_marginBottom="4dp"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/tvTime"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:textColor="@color/skyblue" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="퀴즈 테스트"
        android:id="@+id/tvQuiz"
        android:layout_gravity="center"
        android:background="@drawable/quiz_box_9"
        android:clickable="false"
        android:padding="20dp"
        android:layout_marginBottom="50dp"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="#000" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_hint"
            android:id="@+id/tvHint"
            android:background="@drawable/quiz_ball_9"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/skyblue"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/quiz_pet" />

    </LinearLayout>

</FrameLayout>
